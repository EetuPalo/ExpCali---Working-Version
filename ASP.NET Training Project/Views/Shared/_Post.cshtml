@inject ASP.NET_Training_Project.Models.FormattingService Format
@model ASP.NET_Training_Project.Models.Post

    <article class="blog-post">
        <h1>
            @Html.ActionLink(Model.Title, "Post", "Blog", new { year = Model.Posted.Year, month = Model.Posted.Month, key = Model.Key}, null)
        </h1>
        <div class="details">
            Posted <span>@Format.AsReadableDate(Model.Posted)</span> by <span>@Model.Author</span>
        </div>
        <div class="content">
            @Model.Body
        </div>
    </article>