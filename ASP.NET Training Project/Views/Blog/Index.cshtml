@using ASP.NET_Training_Project.Models
@model IEnumerable<ASP.NET_Training_Project.Models.Post>


<h1>Explorer's Blog</h1>

<p>
    Below are some posts...
</p>

<p class="pager">
    @if  (ViewBag.HasPreviousPage)
    {
        <a class="prev" href="@Url.Action("Index", "Blog", new { page = ViewBag.PreviousPage})">
            %lt; Previous
        </a>
    }

    @if  (ViewBag.HasNextPage)
    {
        <a class="next" href="@Url.Action("Index", "Blog", new { page = ViewBag.NextPage})">
            Next &gt;
        </a>
    }
</p>

<div class="blog-posts">
    @foreach (var post in Model)
    {
        @await Html.PartialAsync("_Post", (Post)post)
    }
</div>